digraph finite_state_machine {
  rankdir=LR;  
  size="8,5"  label="a*+b*"  node [shape = doublecircle]; "0" "2" "1";
  node [shape = circle];
  __I__ [label="", style=invis, width=0]
  __I__ -> "0"
  "0" -> "2" [label = a];
  "0" -> "1" [label = b];
  "2" -> "2" [label = a];
  "1" -> "1" [label = b];
}
